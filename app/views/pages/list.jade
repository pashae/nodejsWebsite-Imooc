//- 继承上层的模板
extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 导演
						th 国家
						th 上映年份
						th 录入时间
						th pv
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item.id}")
							td #{item.title}
							td #{item.director}
							td #{item.country}
							td #{item.year}
							td #{moment(item.meta.updatedAt).format('MM/DD/YYYY')}
							td #{item.pv}
							td: a(target="_blank",href="/movie/#{item._id}") 查看
							td: a(traget="_blank",href="/admin/movie/update/#{item._id}") 修改
							td 
								button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")