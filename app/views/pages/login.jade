doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		include ../includes/head
	body
		include ../includes/header
	block content
	.container
		.row
			.col-md-6.col-md-offset-3
				form(method="POST",action="/user/login")
					.modal-body
						.form-group
							label(for="loginName") 用户名
							input#loginName.form-control(name="user[name]",type="text")
						.form-group
							label(for="loginPassword") 密码
							input#loginPassword.form-control(name="user[password]",type="text")
						.modal-footer
							button.btn.btn-primary(type="button",data-dismiss="modal") 关闭
							button.btn.btn-success(type="submit") 提交